
<p> Venue: <%= @concert.venue %> </p>
<p> City: <%= @concert.city %> </p>
<p> Date: <%= @concert.date %> </p>
<p> Price: <%= @concert.price %> </p>
<p> <%= @concert.description %> </p>

<h3> Comments </h3>

<% @concert.comments.each do |x|%>
	<ul>
		<li style = "border:2px solid red;"> <%= x.body %></li>
	</ul>
<%end%>

<p><strong>Add a comment: </strong></p>
<form action="/concerts/<%=@concert.id%>" method = "POST">
	<input type = "text" name ="comment_body">
	<input type = "hidden" name="id" value"<%=@concert.id%>">
	<button type = "submit"> Add Comment </button>
</form>